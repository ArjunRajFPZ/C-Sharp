@using Microsoft.AspNetCore.Identity
@using CRUDWebApplication.Areas.Identity.Data

@inject SignInManager<DatabaseRegistrationModel> SignInManager
@inject UserManager<DatabaseRegistrationModel> UserManager

@if (SignInManager.IsSignedIn(User))
    {
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><strong>Home</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Taskbook" asp-action="TaskbookAdd"><strong>Add Task</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Taskbook" asp-action="TaskbookView"><strong>View Task</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="SPTaskbook" asp-action="TaskbookView"><strong>SP Task View</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="SPTaskbook" asp-action="TaskbookAdd"><strong>SP Task Add</strong></a>
        </li>
    </ul>
    <ul class="navbar-nav justify-content-end" style="margin-right:100px">
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Settings</strong></a>
        </li>
        <li class="nav-item" style="margin-right:5px">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-primary" style="border-radius: 20px">Logout</button>
            </form>
        </li>
    </ul>    
}
else
{
    <ul class="navbar-nav flex-grow-1"></ul>
    <ul class="navbar-nav justify-content-end" style="margin-right:100px">
        <li class="nav-item" style="margin-right:5px">
            <a class="btn btn-primary" style="border-radius: 20px" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" style="border-radius: 20px" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    </ul>
}
