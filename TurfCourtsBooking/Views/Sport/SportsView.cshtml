@model IEnumerable<TurfCourtsBooking.Models.SportModel>

@{
    int count = 0;
    var registrationSuccessMessage = TempData["registrationSuccessMessage"]?.ToString();
    var registrationErrorMessage = TempData["registrationErrorMessage"]?.ToString();
}
<html>
<head>
    <link href="~/Content/registration.css" rel="stylesheet" />
</head>
<body>
    <form>
        <div>
            @if (!string.IsNullOrWhiteSpace(registrationSuccessMessage))
            {
                <div class="alert alert-dismissible alert-primary" style="margin-top: 20px" role="alert">
                    <strong>@registrationSuccessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(registrationErrorMessage))
            {
                <div class="alert alert-dismissible alert-danger" style="margin-top: 20px" role="alert">
                    <strong>@registrationErrorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <h1 align="center">Sports View</h1><br />
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Turftype</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var sports in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@sports.Name</td>
                                <td>@sports.Turftype</td>
                                <td>
                                    <a class="btn btn-danger" style="border-radius: 5px" runat="server" href="~/Sport/SportsDelete/@sports.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">
                                <div>
                                    No data found!
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</body>
</html>

