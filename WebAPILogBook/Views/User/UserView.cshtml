@model IEnumerable<WebAPILogBook.Models.UserModel>
@{
    int count = 0;
}
<html>
<head>
    <style>
        table {
            width: 100%;
            margin-bottom: 20px;
        }

        td, th {
            border: 1.5px solid #000000;
            padding: 8px;
        }

        th {
            font-family: serif;
            background-color: #0d6efd;
        }
    </style>
</head>
<body>
    <form>
        <div>
            <h1 align="center">User View</h1><br />
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Dateofbirth</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>UserType</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var userList in Model)
                        {
                            if (userList.UserType == "User")
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@userList.Name</td>
                                    <td>@userList.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                    <td>@userList.Email</td>
                                    <td>@userList.Password</td>
                                    <td>@userList.UserType</td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <div>
                                    No data found!
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</body>
</html>

